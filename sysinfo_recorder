use Log::Dispatch::File;
use Log::Dispatch;
while(){
	my $ld=Log::Dispatch->new;
	$ld->add(
	Log::Dispatch::File->new(
				name=>'to_file',
				filename=>'logfile',
				min_level=>'info',
				max_level=>'alert',
				mode=>'append'
				)
	);
	$ld->log(level=>'info',message=>`top -n 1`);
	sleep(30);
}
